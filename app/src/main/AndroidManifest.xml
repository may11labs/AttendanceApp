<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="main.attendance.com.attendanceapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
        android:supportsRtl="true">

        <activity android:name=".ReportActivity">
            <intent-filter>
                <action android:name="main.attendance.com.attendanceapp.ReportActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".AcademicsActivity">
            <intent-filter>
                <action android:name="main.attendance.com.attendanceapp.AcademicsActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".AttendanceActivity">
            <intent-filter>
                <action android:name="main.attendance.com.attendanceapp.AttendanceActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".OptionActivity">
            <intent-filter>
                <action android:name="main.attendance.com.attendanceapp.OptionActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="main.attendance.com.attendanceapp.LoginActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="main.attendance.com.attendanceapp.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
